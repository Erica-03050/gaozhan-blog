{
  "crons": [
    {
      "path": "/api/cron/monitor",
      "schedule": "0 20 * * *"
    }
  ],
  "functions": {
    "src/app/api/cron/monitor/route.ts": {
      "maxDuration": 300
    },
    "src/app/api/monitor/route.ts": {
      "maxDuration": 300
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Content-Security-Policy",
          "value": "script-src 'self' 'unsafe-inline' 'unsafe-eval' https:; object-src 'none'; base-uri 'self';"
        }
      ]
    }
  ]
}
